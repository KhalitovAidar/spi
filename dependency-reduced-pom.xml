<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.keycloak.quickstarts</groupId>
  <artifactId>keycloak-quickstart-parent</artifactId>
  <name>Keycloak Quickstart: user-storage-properties</name>
  <version>25.0.1</version>
  <description>User Storage SPI Simple Example</description>
  <build>
    <finalName>legacy-plugin</finalName>
    <plugins>
      <plugin>
        <groupId>org.openapitools</groupId>
        <artifactId>openapi-generator-maven-plugin</artifactId>
        <version>7.7.0</version>
        <executions>
          <execution>
            <goals>
              <goal>generate</goal>
            </goals>
            <configuration>
              <configOptions>
                <useJakartaEe>true</useJakartaEe>
                <basePath>http://localhost:3000</basePath>
              </configOptions>
              <apiPackage>online.agenta.api</apiPackage>
              <inputSpec>http://localhost:3000/swagger-json</inputSpec>
              <generatorName>java</generatorName>
              <output>${project.build.directory}/gen-openapi</output>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.6.0</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <configuration>
          <source>17</source>
          <target>17</target>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <dependencies>
    <dependency>
      <groupId>org.keycloak</groupId>
      <artifactId>keycloak-core</artifactId>
      <version>25.0.1</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.keycloak</groupId>
      <artifactId>keycloak-server-spi</artifactId>
      <version>25.0.1</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.keycloak</groupId>
      <artifactId>keycloak-model-storage</artifactId>
      <version>25.0.1</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>online.agenta.api</groupId>
      <artifactId>legacy-plugin</artifactId>
      <version>1.0-SNAPSHOT</version>
      <scope>system</scope>
      <systemPath>${project.basedir}/target/legacy-plugin.jar</systemPath>
    </dependency>
  </dependencies>
  <properties>
    <version.keycloak>25.0.1</version.keycloak>
  </properties>
</project>
